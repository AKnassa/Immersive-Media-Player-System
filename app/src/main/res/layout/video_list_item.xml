<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="12dp">

    <!-- Large thumbnail -->
    <ImageView
        android:id="@+id/largeThumbnail"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:visibility="gone"
        android:src="@drawable/video_thumbnail" />

    <TextView
        android:id="@+id/largeTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/largeThumbnail"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:visibility="gone"
        android:text="Large Video Title"/>

    <!-- Current style thumbnail -->
    <ImageView
        android:id="@+id/smallThumbnail"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:src="@drawable/video_thumbnail" />

    <TextView
        android:id="@+id/smallTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@+id/smallThumbnail"
        android:layout_centerVertical="true"
        android:layout_marginStart="20dp"
        android:text="Video Title"/>

</RelativeLayout>
