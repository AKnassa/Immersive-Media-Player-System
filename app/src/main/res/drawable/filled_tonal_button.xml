<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape>
            <solid android:color="#E6E0E9" /> <!-- A darker shade when pressed -->
            <corners android:radius="40dp" />
        </shape>
    </item>
    <item android:state_checked="true">
        <shape>
            <solid android:color="#E8DEF8" /> <!-- A shade when checked/toggled -->
            <corners android:radius="40dp" />
        </shape>
    </item>
    <item>
        <shape>
            <solid android:color="#E6E0E9" /> <!-- Normal state color -->
            <corners android:radius="40dp" />
        </shape>
    </item>
</selector>
